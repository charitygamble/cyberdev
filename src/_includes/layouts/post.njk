{% extends "layouts/base.njk" %}

{% block content %}
    <div class="project-layout">
        <h2>{{title}}</h2>
        <span>Posted on {{ date | readableDate }} by Charli</span>
        <br><br>
       <!-- <img src="{{image}}" alt="image" class="banner-img" /> -->
        {{ content | safe }}
        Share this post: 
        {% set mySlug = page.filePathStem.split('/').pop() %}
        {% set fullPageUrl = site.rootURL ~ '/blog/' ~ mySlug ~ '/' %}
        {% set pageUrl = fullPageUrl | urlencode %}
        {% set stitle = title | urlencode %}
        <p class="social-sharing">
            <a href="https://facebook.com/sharer.php?u={{ pageUrl }}" target="_blank" aria-label="Share on Facebook"><i class="fa-brands fa-facebook"></i></a>
            <a href="https://x.com/intent/tweet?url={{ pageUrl }}&text={{ stitle }}" target="_blank" aria-label="Share on X"><i class="fa-brands fa-x-twitter"></i></a>
            <a href="https://linkedin.com/sharing/share-offsite/?url={{ pageUrl }}" target="_blank" aria-label="Share on LinkedIn"><i class="fa-brands fa-linkedin"></i></a>
            <a href="https://reddit.com/submit?url={{ pageUrl }}&title={{ stitle }}" target="_blank" aria-label="Share on Reddit"><i class="fa-brands fa-reddit"></i></a>
        </p>
    </div>
{% endblock %}